{
	"private": true,
	"main": "build/index.js",
	"engines": {
		"node": "16"
	},
	"scripts": {
		"lint": "eslint ./src",
		"format": "eslint ./src --fix",
		"debug": "nodemon -r dotenv/config src/index.ts",
		"test": "firebase emulators:exec \"NODE_ENV=test jest --runInBand\"",
		"test:api": "NODE_ENV=test jest --runInBand --group=api",
		"test:unit": "NODE_ENV=test jest --runInBand --group=unit",
		"test:integration": "firebase emulators:exec \"NODE_ENV=test jest --runInBand --group=integration\"",
		"build": "tsc",
		"start": "node build/index.js"
	},
	"dependencies": {
		"@grpc/grpc-js": "^1.6.7",
		"@protobuf-ts/runtime": "^2.6.0",
		"@protobuf-ts/runtime-rpc": "^2.6.0",
		"firebase-admin": "^10.2.0",
		"nanoid": "^3.3.4",
		"razorpay": "^2.8.1"
	},
	"devDependencies": {
		"@firebase/rules-unit-testing": "^2.0.2",
		"@tsconfig/node16": "^1.0.2",
		"@tsconfig/node16-strictest": "^1.0.1",
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.35",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"dotenv": "^16.0.1",
		"eslint": "^8.16.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^26.2.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"jest": "^28.0.0",
		"jest-node-exports-resolver": "^1.1.6",
		"jest-runner-groups": "^2.2.0",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.2",
		"ts-jest": "^28.0.0",
		"ts-node": "^10.8.0",
		"typescript": "^4.6.4"
	}
}
