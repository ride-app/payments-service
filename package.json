{
	"private": true,
	"main": "build/main.js",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"lint": "eslint ./src",
		"format": "eslint ./src --fix",
		"debug": "nodemon -r dotenv/config src/main.ts",
		"test": "firebase emulators:exec \"NODE_ENV=test jest --runInBand\"",
		"test:api": "NODE_ENV=test jest --runInBand --group=api",
		"test:unit": "NODE_ENV=test jest --runInBand --group=unit",
		"test:integration": "firebase emulators:exec \"NODE_ENV=test jest --runInBand --group=integration\"",
		"build": "tsc",
		"build:proto": "proto-loader-gen-types --longs=Number --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=src/generated/ protos/*.proto",
		"start": "node build/main.js",
		"start:docker": "docker build . -t debug-app && docker run --rm -it -p 5000:5000 debug-app:latest"
	},
	"dependencies": {
		"@grpc/grpc-js": "^1.5.0",
		"@protobuf-ts/runtime": "^2.5.0",
		"@protobuf-ts/runtime-rpc": "^2.5.0",
		"firebase-admin": "^10.0.1"
	},
	"devDependencies": {
		"@firebase/rules-unit-testing": "^2.0.1",
		"@tsconfig/node16": "^1.0.2",
		"@tsconfig/node16-strictest": "^1.0.0",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.8",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"dotenv": "^11.0.0",
		"eslint": "^8.6.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^16.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jest": "^25.3.4",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"firebase-functions-test": "^0.3.3",
		"jest": "^27.4.7",
		"jest-node-exports-resolver": "^1.1.2",
		"jest-runner-groups": "^2.1.0",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	}
}
