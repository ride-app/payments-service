{
  "private": true,
  "main": "build/server.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint ./src",
    "format": "eslint ./src --fix",
    "debug": "nodemon -r dotenv/config src/server.ts",
    "test": "NODE_ENV=test jest",
    "integration-test": "NODE_ENV=test jest --group=integration",
    "build": "tsc",
    "build:proto": "proto-loader-gen-types --longs=Number --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=src/proto/ *.proto",
    "start": "node build/server.js",
    "start:docker": "tsc && docker build . -t debug-app && docker run --rm -it -p 5000:5000 debug-app:latest"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.6.7",
    "@grpc/proto-loader": "^0.6.12",
    "firebase-admin": "^10.2.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.26.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.5.1",
    "jest-node-exports-resolver": "^1.1.6",
    "jest-runner-groups": "^2.2.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  }
}
